@model ECommerceMVC.Data.HangHoa

@{
    Layout = "_AdminLayout";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Edit Categories</h1>
<p class="mb-4">Edit Categories</p>
<!-- End Page Heading -->
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="TenHh" class="control-label">Tên hàng hoá</label>
        <input asp-for="TenHh" class="form-control" placeholder="Nhập tên" />
        <span asp-validation-for="TenHh" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TenAlias" class="control-label">Tên Alias</label>
        <input asp-for="TenAlias" class="form-control" placeholder="Nhập tên alias" />
        <span asp-validation-for="TenAlias" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaLoai" class="control-label">Mã loại</label>
        <select asp-for="MaLoai" class="form-control" asp-items="ViewBag.MaLoai"></select>
    </div>
    <div class="form-group">
        <label asp-for="MoTaDonVi" class="control-label">Mô tả đơn vị</label>
        <input asp-for="MoTaDonVi" class="form-control" placeholder="Nhập mô tả đơn vị" />
        <span asp-validation-for="MoTaDonVi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hinh" class="control-label">Ảnh</label>
        <input asp-for="Hinh" class="form-control" placeholder="Chọn ảnh" />
        <span asp-validation-for="Hinh" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SoLanXem" class="control-label">Số lần xem</label>
        <input asp-for="SoLanXem" class="form-control" placeholder="Nhập số lần xem" />
        <span asp-validation-for="SoLanXem" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MoTa" class="control-label">Mô tả</label>
        <input asp-for="MoTa" class="form-control" placeholder="Nhập mô tả" />
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaNcc" class="control-label">Mã nhà cung cấp</label>
        <select asp-for="MaNcc" class="form-control" asp-items="ViewBag.MaNcc"></select>
    </div>
    <br>
    <a asp-action="Categories" class="btn btn-secondary btn-icon-split btn-md">
        <span class="icon text-white-30">
            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="text">Back</span>

    </a>
    <button type="submit" class="btn btn-primary btn-icon-split btn-md">
        <span class="icon text-white-30">
            <i class="fas fa-plus"></i>
        </span>
        <span class="text">Edit</span>
    </button>
</form>
